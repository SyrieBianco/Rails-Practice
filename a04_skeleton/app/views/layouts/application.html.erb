<!DOCTYPE html>
<html>
<head>
  <title>Assessment04</title>
  <% csrf_meta_tags %>
</head>
<body>

  <header class="session-links">
    <% if logged_in? %>
      <%= "Welcome, " + current_user.username %>
      <%= button_to "Sign Out", session_url, method: :delete%>
    <% else %>
      <%= link_to "Sign In", new_session_url, method: :post %>
      <%= link_to "Sign Up", new_user_url, method: :post %>
    <% end %>
  </header>

  <div class="errors">
    <% flash[:errors].try(:each) do |error| %>
      <%= error %>
    <% end %>
  </div>

  <div class="main-content">
    <%= yield %>
  </div>

</body>
</html>
